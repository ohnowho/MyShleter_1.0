/* profile section */

.profile-view {
  background: antiquewhite;
  height: 100vh;
  width: 100%;
  position:absolute;
  top:0;
  z-index:1;
  display: block;
  overflow: hidden;
}
.profile-wrap {
  position: relative;
  width: 100%;
  display: block;
}
.profile-back {
  width: 22px;
  height: 22px;
  position: absolute;
  left: 16px;
  top: 16px;
  z-index: 2;
}
.profile-wall {
  width:100vh;
  filter:blur(10px);
  overflow:hidden;
  display:inline-block;
  position:absolute;
  top:0;
  left:-10px;
  /* right: 10px; */
}
.profile-header-wrap{
  position: relative;
}
.profile-header {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding-top: 36px;
}
.profile-photo {
  border-radius:50%;
  border:2px #7c7c7c solid;
  overflow:hidden;
  width:100px;
  height:100px;
}
.porfile-name {
  color:#7c7c7c;
}
.profile-wrap .wrap-list {
  position: relative;
  z-index: 1;
  margin-top: 20px;
  margin-right: 2px;
  margin-left: 2px;
  margin-bottom: 0;
  overflow: auto;
  height: calc(100vh - 215px); 
}
.profile-wrap .empty-tip {
  position: relative;
  z-index: 1;
  flex-direction: column;
  margin-top: 100px;
}
.empty-tip image{
  width: 80px;
  height: 80px;
  margin: 0;
}
.empty-tip .empty-text {
  font-size: 16px;
  color: #7c7c7c;
}